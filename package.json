{
  "name": "clerc",
  "version": "0.1.4",
  "description": "Live Reload client for Chrome App development.",
  "scripts": {
    "test": "ava -v --color src/**/*.test.js",
    "watch-test": "ava -wv --color ./src/**/*.test.js &",
    "build": "NODE_ENV=production webpack --colors",
    "watch": "webpack --watch --progress --colors &",
    "watch-fake": "sh -c 'cd fake-plugin && npm run watch &'",
    "watch-all": "npm run watch && npm run watch-test"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skylize/clerc.git"
  },
  "keywords": [
    "google",
    "chrome",
    "extension",
    "app",
    "live",
    "reload",
    "livereload"
  ],
  "author": "John 'Sky' Higgins",
  "license": "MITNFA",
  "bugs": {
    "url": "https://github.com/skylize/clerc/issues"
  },
  "homepage": "https://github.com/skylize/clerc#readme",
  "eslintIgnore": [
    "build/*",
    "dist*/*"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "rules": {
      "no-console": 0,
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-unused-vars": [
        "off",
        {
          "caughtErrors": "none",
          "vars": "local"
        }
      ]
    }
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^4.6.1",
    "file-loader": "^0.11.2",
    "image-webpack-loader": "^3.4.2",
    "mock-socket": "^7.0.0",
    "sinon": "^3.2.1",
    "str-replace-loader": "^1.0.1",
    "webpack": "^3.5.6"
  },
  "dependencies": {
    "empty-promise": "^1.2.0"
  }
}
